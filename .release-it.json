{
  "git": {
    "commit": false,
    "tag": true,
    "push": true,
    "tagName": "${version}",
    "tagAnnotation": "Release ${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "getLatestTagFromAllRefs": true
  },
  "github": {
    "release": true,
    "releaseName": "${version}"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": "git fetch --tags"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}
